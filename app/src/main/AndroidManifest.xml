<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mmt.shubh.expensemanager">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.SEND"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="com.mmt.shubh.gcm.permission.C2D_MESSAGE"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE"/>
    <uses-permission android:name="com.mmt.shubh.permission.ACCESS_PROVIDER"/>

    <permission
        android:name="com.mmt.shubh.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature"/>
   <!-- <permission
        android:name="com.mmt.shubh.permission.ACCESS_PROVIDER"
        android:description="@string/permission_access_provider_desc"
        android:label="@string/permission_access_provider_label"
        android:protectionLevel="signature"/>
-->
    <application
        android:name=".ExpenseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.mmt.shubh.expensemanager.utils.GlideConfiguration"
            android:value="GlideModule"/>
        <meta-data
            android:name="com.bumptech.glide.integration.okhttp.OkHttpGlideModule"
            android:value="GlideModule"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

       <!-- <provider
            android:name=".database.provider.ExpenseProvider"
            android:authorities="com.mmt.shubh.expensemanager.expenseprovider"
            android:exported="false"
            android:label="@string/app_name"
            android:multiprocess="false"
            android:permission="com.mmt.shubh.permission.ACCESS_PROVIDER"/>-->

        <activity android:name=".home.HomeActivity"/>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>

                <category android:name="com.mmt.shubh.expensemanager"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".gsm.ExpenseGCMListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>
        </service>
        <service
            android:name=".gsm.ExpenseInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
        <service
            android:name=".gsm.RegistrationIntentService"
            android:exported="false"/>
        <service
            android:name=".service.ExpenseTaskService"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY"/>
            </intent-filter>
        </service>

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name=".onboarding.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".expensebook.detail.ExpenseBookActivity"/>
        <activity android:name=".member.MemberDetailActivity"/>
        <activity android:name=".expensebook.add.ExpenseBookAddUpdateActivity"/>
        <activity android:name=".expense.AddExpenseActivity"/>
        <activity
            android:name=".account.AccountActivity"
            android:label="@string/title_activity_account"/>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
        <activity
            android:name=".cash.CashActivity"
            android:label="@string/title_activity_cash">
        </activity>

        <activity
            android:name=".category.CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".home.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".home.HomeActivity"/>
        </activity>
        <activity android:name=".home.SummaryActivity"/>
    </application>

</manifest>
