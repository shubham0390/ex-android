<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorLightPrimary"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_huge"
        android:contentDescription="@string/app_name"
        android:src="@drawable/coins"/>


    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_below="@id/logo"
        android:layout_marginTop="@dimen/spacing_huge"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_large"
        android:text="@string/welcome"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/social_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/welcomeMessage"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_huge"
        android:background="@color/milky_white"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/phoneNumberTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/phoneNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:hint="@string/phone_no_address_text"
                android:labelFor="@id/phoneNumberEditText"
                android:inputType="phone"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/otpTextInputLayout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/otpEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:hint="@string/otp"
                android:labelFor="@id/phoneNumberEditText"
                android:inputType="phone"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_submit"
            android:text="@string/submit"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="@color/colorPrimary"
            style="?attr/borderlessButtonStyle"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <Button
            android:id="@+id/button_validate"
            android:text="@string/validate"
            android:gravity="center"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            style="?attr/borderlessButtonStyle"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
    </RelativeLayout>
    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>
</RelativeLayout>