<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/amount_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_type"
            android:layout_marginBottom="@dimen/spacing_large"
            android:padding="@dimen/spacing_medium">

            <ImageView
                android:id="@+id/category_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_medium"
                android:background="@drawable/square_back_ground"
                android:padding="2dp"
                android:src="@drawable/ic_icon_category_tickets" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_toRightOf="@id/category_image">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/expense_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Description"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/amount_edit_text_continer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/name_input_layout"
                android:layout_toRightOf="@id/category_image"
                android:gravity="clip_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/currencyText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Rs."
                    android:textSize="20sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/amount_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8sp"
                    android:layout_marginRight="16dp">

                    <com.mmt.shubh.expensemanager.ui.view.AutoResizeEditText
                        android:id="@+id/amount_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/expense_amount_title"
                        android:inputType="numberDecimal"
                        android:isScrollContainer="false"
                        android:maxLength="240"
                        android:text="0"
                        android:textSize="34sp" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/actionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount_container"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium"
            android:weightSum="1">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/action_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_weight=".25"
                android:drawableLeft="@drawable/ic_today_black_24dp"
                android:drawablePadding="@dimen/spacing_medium"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:textColor="@color/black"
                tools:text="Today" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/action_expense_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_weight=".25"
                android:drawableLeft="@drawable/ic_library_books_24dp1"
                android:drawablePadding="@dimen/spacing_medium"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:text="@string/expense_book"
                android:textColor="@color/black" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/action_documents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_weight=".25"
                android:drawableLeft="@drawable/ic_insert_photo_24dp"
                android:drawablePadding="@dimen/spacing_medium"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:text="@string/documents"
                android:textColor="@color/black" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/action_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_weight=".25"
                android:drawableLeft="@drawable/ic_comment_24dp"
                android:drawablePadding="@dimen/spacing_medium"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:text="Comment"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:clipToPadding="true"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/action_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/camera"
                android:textColor="@color/milky_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/action_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/documents"
                android:textColor="@color/milky_white"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/friend_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:clipToPadding="true"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <FrameLayout
            android:id="@+id/friend_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_member_list" />

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
