<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/ListItem"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_item_selector"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        style="@style/ListItemIcon"
        android:contentDescription="@string/app_name"/>

    <RelativeLayout
        style="@style/ListItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/expense_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/expense_book_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/expense_book_title"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/expense_book_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/expense_book_type"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/member_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="@dimen/spacing_micro"
            tools:text="4"/>

    </RelativeLayout>
</LinearLayout>