<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/milky_white</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
    </style>

    <style name="root_layout_style">
        <item name="android:layout_marginLeft">@dimen/root_layout_left_margin</item>
        <item name="android:layout_marginRight">@dimen/root_layout_right_margin</item>
    </style>


    <style name="Widget.ExManager.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorPrimary">@color/milky_white</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.ExManager.Toolbar.Toolbar">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="style_group_name_text_view">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/group_name_text_size</item>
    </style>

    <style name="BaseListItem">
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingTop">?android:attr/listPreferredItemPaddingLeft</item>
    </style>

    <style name="ListItem" parent="BaseListItem">
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
    </style>

    <style name="ListItemIcon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">@dimen/list_item_icon_margin_start</item>
    </style>

    <style name="ListItemText">
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LoginScreen" parent="AppTheme">
        <!--<item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>-->
    </style>
    <style name="SplashScreen" parent="AppTheme">
        <item name="android:textColor">@color/milky_white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
